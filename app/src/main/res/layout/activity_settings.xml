<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CookBook"
        android:textSize="24sp"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/handleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@janedoe"
                android:textColor="#888888"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang cá nhân"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/tvMyBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dấu trang của tôi"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/tvMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tin nhắn"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/tvPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tvHelpSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:clickable="true"
            android:focusable="true"/>
        
        <TextView
            android:id="@+id/tvThanhVienNhom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành viên nhóm"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_margin="16dp"/>

    <com.example.appchiasecongthucnauan.custom.CustomBottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>